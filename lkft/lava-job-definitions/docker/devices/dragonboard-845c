- deploy:
    timeout:
      minutes: 15
    to: fastboot
    docker:
        image: yongqinliu/linaro-android-docker:0.1
    images:
      "partition:0":
        url: downloads://gpt_both0.bin
      boot:
        url: downloads://boot.img
      userdata:
        url: downloads://userdata.img
      super:
        url: downloads://super.img
{% if IMAGE_SUPPORTED_CACHE is defined %}
      cache:
        url: downloads://cache.img
{% endif %}

